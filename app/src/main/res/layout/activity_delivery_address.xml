<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    tools:context="rainmanproductions.feedme.controllers.DeliveryAddressActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <EditText
            android:id="@+id/deliveryStreetAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Delivery Street Address"
            android:inputType="textPostalAddress">
        </EditText>

        <EditText
            android:id="@+id/deliveryUnitNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Delivery Unit Number"
            android:inputType="text">
        </EditText>

        <EditText
            android:id="@+id/deliveryCity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Delivery City"
            android:inputType="text">
        </EditText>

        <EditText
            android:id="@+id/deliveryState"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Delivery State"
            android:inputType="text">
        </EditText>

        <EditText
            android:id="@+id/deliveryZipCode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Delivery Zip Code"
            android:inputType="number"
            android:maxLength="5">
        </EditText>

        <EditText
            android:id="@+id/deliveryCountry"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Delivery Country"
            android:inputType="text">
        </EditText>

        <Button
            android:id="@+id/deliveryAddressConfirmBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>